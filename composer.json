{
    "name": "adichan/product",
    "description": "For products",
    "keywords": [
        "adichan",
        "product"
    ],
    "homepage": "https://github.com/adichan/product",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Adrian Radores",
            "email": "mobistyle35@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/support": "^12.0",
	"pestphp/pest": "^4.1.5"

    },
    "require-dev": {
        "orchestra/testbench": "^10.8.0",
        "pestphp/pest-plugin-browser": "^4.1.1",
        "pestphp/pest-plugin-laravel": "^4.0.0",
        "pestphp/pest-plugin-type-coverage": "^4.0.3",
        "rector/rector": "^2.2.8"
    },
    "autoload": {
        "psr-4": {
            "Adichan\\Product\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Adichan\\Product\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Adichan\\Product\\ProductServiceProvider"
            ],
            "aliases": {
                "Product": "Adichan\\Product\\ProductFacade"
            }
        }
    }
}
